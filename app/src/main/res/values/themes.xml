<resources>
    <!-- Base application theme. -->
    <style name="Theme.MealDB" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_dark</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/maison_neue_book</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/maison_neue_bold</item>
    </style>

    <style name="Text.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/maison_neue_bold</item>
    </style>

    <style name="Text.TitleSmall">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/maison_neue_bold</item>
    </style>
</resources>